{
  "name": "@substrate/as-runtime",
  "version": "0.0.1",
  "description": "A Polkadot Runtime in AssemblyScript",
  "author": "Stefanie Doll",
  "license": "Apache-2.0",
  "ascMain": "assembly/index.ts",
  "scripts": {
    "build:optimized": "asc assembly/index.ts -b build/runtime.wasm -t build/runtime.wat --importMemory --noAssert --use abort=  --sourceMap --validate --optimize",
    "build:tsd": "asc assembly/index.ts -d build/index.d.ts",
    "build": "yarn build:tsd && yarn build:optimized",
    "test": "asp"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.9.1",
    "as-bignum": "^0.1.5"
  },
  "devDependencies": {
    "@substrate/as-types": "0.0.1",
    "@substrate/as-utils": "0.0.1",
    "@as-pect/cli": "^2.7.0",
    "assemblyscript": "^0.9.2"
  },
  "releaseFiles": [
    "assembly/",
    "README.md",
    "LICENSE"
  ]
}
